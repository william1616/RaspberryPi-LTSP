UserGroups() {

  MENUEPT=$(whiptail --title "Manage-users Submenu" --cancel-button "Main Menu" --ok-button "Select" --menu "What would you like to do?" 20 80 10 \
  	"Add-user" "Add a new Linux user" \
  	"Remove-user" "Remove a Linux user" \
  	"Change-password" "Change password of a user" \
  	"Display-users" "List all the users on the system" \
  	"Add-teacher" "Add user to the staff permission group" \
  	"Launch-graphical" "Launch a graphical user management panel" \
    "Enable-Sudo" "Enables the use of sudo for pupils. Used for GPIO access" \
    "Disable-Sudo" "Disables the use of sudo for pupils" \
    "CSV-Import" "Import Users from a CSV File" \
    3>&1 1>&2 2>&3)

#<<COMMENT1
#if [$MENUOPT -eq 0]; then
case "$MENUEPT" in
	Add-user) 
    AddUsers
	Menu
    ;;
    Remove-user) 
    RemoveUser
	Menu
    ;;
    Change-password) 
    ChangeUserPassword
	Menu
    ;;
    Display-users) 
    DisplayUsers
	;;
    Launch-graphical) 
    su -c "gnome-control-center user-accounts &" > /dev/null 2>/dev/null
	Menu
    ;;
    Add-teacher) 
    AddTeacher
	Menu
    ;;
    Graphics-fix)
    fixGroups
    Menu
	;;
	Enable-Sudo)
    SudoMenu
    Menu
	;;
	Disable-Sudo)
    rm -f /opt/ltsp/armhf/etc/sudoers.d/01pupil
    Menu
	;;
	Add-Samab-user)
    AddSambaUser
    Menu
	;;
	Remove-Samab-user)
    user=$(whiptail --inputbox "Enter the username of the user you wish to remove from Samba" 8 78 $INIT --title "Samba" 3>&1 1>&2 2>&3)
    pdbedit -u "$user" -xl
    whiptail --title "Samba" --msgbox 'User has been removed from samba. ' 12 78
    Menu
	;;
    CSV-Import)
      filepath=$(whiptail --inputbox "Enter the absolute path of the CSV File" 8 78 $INIT --title "CSV" 3>&1 1>&2 2>&3)
      sudo python Scripts/importUsers.py $filepath
    ;;
    *)
    Menu
    ;;

esac
} #***************************************************************************************************

ExtraSoftware() {

if [ $(checkInternet) -eq 0 ]; then
  MENUEPT=$(whiptail --title "Extra Software Submenu" --cancel-button "Finished" --menu "What would you like to do?" 20 100 10 \
    "Install-Libreoffice" "Libreoffice is a full free office suite, similar to Microsoft office " \
    "Install-Arduino" "The Arduino IDE is for programming and interacting with Arduinos" \
    "Install-Scratch-gpio" "Scratch GPIO is a special version of scratch for GPIO work" \
    "Install-Python-hardware" "Python libraries for interacting with boards like the Pibrella" \
    "Install-Epoptes" "Epoptes is widely used free and open source classroom management program" \
    "Install-Custom-package" "Allows you to enter the name of a package from Raspbian repository" \
    3>&1 1>&2 2>&3)

case "$MENUEPT" in
    Install-Libreoffice) 
    ltsp-chroot --arch armhf apt-get -y install libreoffice
    UpdateConfig NBDBuildNeeded true
    FinishedInstallingSoftware
    ;;
	Install-Arduino) 
    ltsp-chroot --arch armhf apt-get -y install arduino
    UpdateConfig NBDBuildNeeded true
    FinishedInstallingSoftware
    ;;
    Install-Scratch-gpio) 
    whiptail --title "Error" --infobox "ScratchGPIO installation support has not been added yet" 8 78
    echo "ScratchGPIO support has not been added yet"
    sleep 3
	ExtraSoftware
    ;;
    Install-Python-hardware) 
    ltsp-chroot --arch armhf pip install pibrella
    UpdateConfig NBDBuildNeeded true
    FinishedInstallingSoftware
    ;;
    Install-Epoptes)
    EpoptesInstaller
    UpdateConfig NBDBuildNeeded true
    ;;
    Install-Custom-package)
    InstallProgram
    
    FinishedInstallingSoftware
    ;;
    *)
    FinishedInstallingSoftware
    ;;

esac

else
	whiptail --title "Error" --msgbox "No internet connection, unable to proceed..." 8 78
fi
}

